<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/txt_mycmtlist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_mycmtlist_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="TextView"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/img_mycmtlist_rate"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/img_mycmtlist_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_mycmtlist_image"
        android:src="@drawable/rate_10" />

    <ImageView
        android:id="@+id/img_mycmtlist_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_productmenu_image"
        android:src="@drawable/no_image" />

    <View
        android:id="@+id/view1"
        android:layout_width="2dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_mycmtlist_image"
        android:background="#CDC9C9" />

    <TextView
        android:id="@+id/txt_mycmtlist_productname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view1"
        android:maxLines="1"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_mycmtlist_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mycmtlist_productname"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view1"
        android:lines="3"
        android:text="TextView"
        android:textColor="#000000" />

</RelativeLayout>