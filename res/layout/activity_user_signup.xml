<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0FFFF" >

    <ImageView
        android:id="@+id/user_img_signupicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signup_icon" />
    
    <TextView
        android:id="@+id/user_txt_signuptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_img_signupicon"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Create an Account (2/3)"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <include
        android:id="@+id/view_create_dialog2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_txt_signuptitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        layout="@layout/user_signupdialog_2" />

    <include
        android:id="@+id/view_create_dialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_create_dialog2"
        android:layout_centerHorizontal="true"
        layout="@layout/user_signupdialog_1" />

    <include
        android:id="@+id/view_create_dialog3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        layout="@layout/user_signupdialog_3" />
    
</RelativeLayout>