
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/img_groupcmt_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_productmenu_image"
            android:src="@drawable/add_user" />

        <TextView
            android:id="@+id/txt_groupcmt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/img_groupcmt_user"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="User Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_groupcmt_prodName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_groupcmt_user"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_groupcmt_user"
            android:lines="1"
            android:text="SSSSSSSSSSSSSSSSSSSS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_groupcmt_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_groupcmt_prodName"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_groupcmt_user"
            android:lines="4"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_groupcmt_rate"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/txt_groupcmt_text"
            android:layout_below="@+id/txt_groupcmt_text"
            android:src="@drawable/rating" />

        <TextView
            android:id="@+id/txt_groupcmt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_groupcmt_rate"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="03.15.2013"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />
        
         <View
             android:id="@+id/view1"
             android:layout_width="2dp"
             android:layout_height="95dp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="10dp"
             android:layout_toRightOf="@+id/img_groupcmt_user"
             android:background="#EEE9E9" />

    </RelativeLayout>
