<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/img_listgroup_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_productmenu_image"
        android:src="@drawable/groupicon" />

    <TextView
        android:id="@+id/txt_listgroup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_listgroup_icon"
        android:text="Group Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txt_listgroup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_listgroup_name"
        android:layout_below="@+id/txt_listgroup_name"
        android:layout_marginTop="5dp"
        android:text="Group description"
        android:textColor="#363636" />

    <TextView
        android:id="@+id/txt_listgroup_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_listgroup_icon"
        android:layout_alignLeft="@+id/txt_listgroup_content"
        android:text="Menbers:"
        android:textColor="#363636" />

</RelativeLayout>